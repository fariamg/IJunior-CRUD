// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model User {
  id        Int @id @default(autoincrement())
  name      String
  email     String @unique
  photo     String?
  password  String
  role      String
  createdAt DateTime? @default(now())

  @@map("users")
}

model Artist {
  id        Int @id @default(autoincrement())
  name      String
  photo     String?
  bio       String?
  listeners Int
  createdAt DateTime? @default(now())
  musics    Music[] //Implicit relation. Cria uma tabela intermediaria que cuida da relação m-n (muitos para muitos), ja que um artista pode ter muitas musicas e uma musica pode ter muitos artistas

  @@map("artists")
}

model Music {
  id          Int @id @default(autoincrement())
  name        String
  duration    Int
  recordDate  DateTime
  createdAt   DateTime? @default(now())
  artists     Artist[] 
  @@map("musics")
}
